#include <dt-bindings/hid.h>

/ {
	hid {
		compatible = "hid";
		keyboard {
			compatible = "hid-kbd";
			input-id = <1>;
			report = <HID_KBD_REPORT(1)>;
		};
	};
};

&button0 {
	zephyr,code = <INPUT_KEY_A>;
};

&button1 {
	zephyr,code = <INPUT_KEY_B>;
};

&button2 {
	zephyr,code = <INPUT_KEY_C>;
};

&button3 {
	zephyr,code = <INPUT_KEY_D>;
};
